using UnityEngine;
using UnityEngine.Networking;
using TMPro;  // TMP_Text を使用するために追加
using System.Collections;

public class HarvestRequester : MonoBehaviour
{
    private string serverUrl = "http://192.168.0.119:5000/predict"; // Raspberry Pi のIPアドレス

    // UIのTextMeshPro (TMP_Text) コンポーネントへの参照
    public TMP_Text resultText;

    public void SendHarvestRequest()
    {
        StartCoroutine(SendRequest());
    }

    IEnumerator SendRequest()
    {
        using (UnityWebRequest request = UnityWebRequest.Post(serverUrl, ""))
        {
            yield return request.SendWebRequest();

            if (request.result == UnityWebRequest.Result.Success)
            {
                string response = request.downloadHandler.text;
                Debug.Log("Response: " + response);

                // 取得した結果をUIのTextMeshProに反映
                resultText.text = "収穫判定結果: " + response;
            }
            else
            {
                Debug.LogError("Error: " + request.error);
                resultText.text = "エラーが発生しました";
            }
        }
    }
}
