using UnityEngine;
using UnityEngine.UI;
using UnityEngine.Networking;
using System.Collections;

public class GitHubImageDisplay : MonoBehaviour
{
    public string baseUrl = "https://raw.githubusercontent.com/Takasi365/raspi/main/captured_image.jpg"; // GitHubの画像URL
    public RawImage rawImage; // 画像を表示するRawImage UIコンポーネント

    void Start()
    {
        // 画像を非同期でダウンロードして表示する
        StartCoroutine(DownloadImage());
    }

    IEnumerator DownloadImage()
    {
        // タイムスタンプを追加してURLを一意にする
        string urlWithTimestamp = baseUrl + "?t=" + System.DateTime.Now.Ticks;

        using (UnityWebRequest request = UnityWebRequestTexture.GetTexture(urlWithTimestamp))
        {
            // 画像がダウンロードされるのを待機
            yield return request.SendWebRequest();

            // エラーが発生した場合
            if (request.result != UnityWebRequest.Result.Success)
            {
                Debug.LogError("Error downloading image: " + request.error);
            }
            else
            {
                // ダウンロードした画像をTexture2Dに変換
                Texture2D texture = ((DownloadHandlerTexture)request.downloadHandler).texture;

                // RawImageに画像を設定
                rawImage.texture = texture;
                rawImage.SetNativeSize(); // 画像のサイズに合わせてRawImageを調整
            }
        }
    }
}
